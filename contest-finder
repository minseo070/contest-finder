                        <div>
                            <label for="continent-select" class="block text-sm font-medium text-gray-700 mb-1">ëŒ€ë¥™</label>
                            <select id="continent-select" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 bg-white">
                                ${continents.map(c => `<option value="${c}" ${c === initialContinent ? 'selected' : ''}>${c}</option>`).join('')}
                            </select>
                        </div>

                        <!-- êµ­ê°€ ì„ íƒ -->
                        <div>
                            <label for="country-select" class="block text-sm font-medium text-gray-700 mb-1">êµ­ê°€</label>
                            <select id="country-select" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 bg-white" disabled>
                                <!-- JavaScript will update options -->
                            </select>
                        </div>
                    </div>
                `;
                
                // êµ­ì œ ëŒ€íšŒ í•„í„°ê°€ ë Œë”ë§ëœ í›„, êµ­ê°€ ì„ íƒ ë“œë¡­ë‹¤ìš´ ì—…ë°ì´íŠ¸ ë° ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ì¶”ê°€
                const continentSelect = document.getElementById('continent-select');
                if (continentSelect) {
                    continentSelect.addEventListener('change', () => {
                        updateCountrySelect(continentSelect.value);
                    });
                    
                    // ì´ˆê¸° êµ­ê°€ ëª©ë¡ ë Œë”ë§
                    updateCountrySelect(continentSelect.value, initialCountry);
                }
            }
        };
        
        /**
         * ì„ íƒëœ ëŒ€ë¥™ì— ë”°ë¼ êµ­ê°€ ë“œë¡­ë‹¤ìš´ ì˜µì…˜ì„ ì—…ë°ì´íŠ¸í•©ë‹ˆë‹¤.
         */
        const updateCountrySelect = (selectedContinent, initialCountry = 'êµ­ê°€ ì„ íƒ ì•ˆ í•¨') => {
            const countrySelect = document.getElementById('country-select');
            if (countrySelect) {
                const countryList = countriesByContinent[selectedContinent] || countriesByContinent['ëŒ€ë¥™ ì„ íƒ ì•ˆ í•¨'];
                countrySelect.innerHTML = countryList.map(c => 
                    `<option value="${c}" ${c === initialCountry ? 'selected' : ''}>${c}</option>`
                ).join('');
                
                countrySelect.disabled = selectedContinent === '' || selectedContinent === 'ëŒ€ë¥™ ì„ íƒ ì•ˆ í•¨';
            }
        };

        // ----------------------------------------------------
        // 4. API í˜¸ì¶œ ë¡œì§
        // ----------------------------------------------------
        
        /**
         * Gemini APIë¥¼ í˜¸ì¶œí•©ë‹ˆë‹¤ (ì§€ìˆ˜ ë°±ì˜¤í”„ ë° ì¬ì‹œë„ ë¡œì§ í¬í•¨).
         */
        async function callGeminiApi(payload, retries = 0) {
            try {
                const response = await fetch(`${API_URL}?key=${apiKey}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    if (response.status === 429 && retries < MAX_RETRIES) {
                        const delay = Math.pow(2, retries) * 1000 + Math.random() * 1000;
                        console.log(`Rate limit exceeded. Retrying in ${Math.round(delay / 1000)}s...`);
                        await new Promise(resolve => setTimeout(resolve, delay));
                        return callGeminiApi(payload, retries + 1);
                    }
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const result = await response.json();
                const candidate = result.candidates?.[0];

                if (candidate && candidate.content?.parts?.[0]?.text) {
                    const text = candidate.content.parts[0].text;
                    let sources = [];
                    const groundingMetadata = candidate.groundingMetadata;
                    if (groundingMetadata && groundingMetadata.groundingAttributions) {
                        sources = groundingMetadata.groundingAttributions
                            .map(attribution => ({
                                uri: attribution.web?.uri,
                                title: attribution.web?.title,
                            }))
                            .filter(source => source.uri && source.title);
                    }
                    return { text, sources };
                } else {
                    throw new Error("API ì‘ë‹µì´ ë¹„ì–´ ìˆê±°ë‚˜ ì˜ˆìƒì¹˜ ëª»í•œ í˜•ì‹ì…ë‹ˆë‹¤.");
                }
            } catch (err) {
                console.error("API í˜¸ì¶œ ì¤‘ ì˜¤ë¥˜ ë°œìƒ:", err);
                throw new Error(`ì •ë³´ ê²€ìƒ‰ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤: ${err.message}`);
            }
        }

        /**
         * ê²€ìƒ‰ ë¡œì§ì„ ì‹¤í–‰í•©ë‹ˆë‹¤.
         */
        async function handleSearch() {
            const query = document.getElementById('query-input').value.trim();
            const startDate = document.getElementById('start-date').value;
            const endDate = document.getElementById('end-date').value;

            if (!scope) {
                displayError('êµ­ë‚´/í•´ì™¸ êµ¬ë¶„ì„ ë¨¼ì € ì„ íƒí•´ì•¼ í•©ë‹ˆë‹¤.');
                return;
            }
            if (query === '') {
                displayError('ê´€ì‹¬ ë¶„ì•¼ë¥¼ ì…ë ¥í•´ ì£¼ì„¸ìš”.');
                return;
            }

            updateLoadingState(true);
            messageAreaEl.innerHTML = ''; // Clear previous results

            try {
                // 1. ì¿¼ë¦¬ ë¹Œë“œ
                let searchCriteria = [];
                let systemInstructions = `ì‚¬ìš©ìì˜ ê´€ì‹¬ ë¶„ì•¼(${query})ì™€ ë‹¤ìŒ ì¡°ê±´ì— ë§ëŠ” êµì™¸ ëŒ€íšŒ(ê³µëª¨ì „, í•´ì»¤í†¤ ë“±) 3~5ê°œë¥¼ ì°¾ì•„ í•œêµ­ì–´ë¡œ ìƒì„¸íˆ ì •ë¦¬í•´ ì£¼ì„¸ìš”.`;
                let region = '';
                let sponsorType = '';
                let continent = '';
                let selectedCountry = '';

                if (scope === 'domestic') {
                    region = document.getElementById('region-select')?.value || '';
                    sponsorType = document.getElementById('sponsor-select')?.value || '';

                    searchCriteria.push(`êµ­ë‚´ ëŒ€íšŒ`);
                    if (region && region !== 'ì „ì²´ ì§€ì—­') searchCriteria.push(`ì§€ì—­: ${region}`);
                    if (sponsorType) searchCriteria.push(`ì£¼ê´€ ê¸°ê´€: ${sponsorType}`);
                } else if (scope === 'international') {
                    continent = document.getElementById('continent-select')?.value || '';
                    selectedCountry = document.getElementById('country-select')?.value || '';
                    
                    searchCriteria.push(`êµ­ì œ ëŒ€íšŒ`);
                    if (continent && continent !== 'ëŒ€ë¥™ ì„ íƒ ì•ˆ í•¨') searchCriteria.push(`ëŒ€ë¥™: ${continent}`);
                    if (selectedCountry && selectedCountry !== 'êµ­ê°€ ì„ íƒ ì•ˆ í•¨') searchCriteria.push(`êµ­ê°€: ${selectedCountry}`);
                }
                
                // ë‚ ì§œ ë²”ìœ„ ë¡œì§
                let periodCriteria = '';
                if (startDate && endDate) {
                    periodCriteria = `ëŒ€íšŒ ìš´ì˜ ê¸°ê°„ì´ ${startDate}ë¶€í„° ${endDate} ì‚¬ì´ì— í¬í•¨ë˜ëŠ” (ì ‘ìˆ˜ ë˜ëŠ” ê°œìµœ) ëŒ€íšŒ`;
                    searchCriteria.push(periodCriteria);
                } else if (startDate) {
                    periodCriteria = `ëŒ€íšŒ ìš´ì˜ ê¸°ê°„ì´ ${startDate} ì´í›„ì— ì‹œì‘í•˜ëŠ” ëŒ€íšŒ`;
                    searchCriteria.push(periodCriteria);
                } else if (endDate) {
                    periodCriteria = `ëŒ€íšŒ ìš´ì˜ ê¸°ê°„ì´ ${endDate} ì´ì „ì— ë§ˆê°ë˜ëŠ” ëŒ€íšŒ`;
                    searchCriteria.push(periodCriteria);
                }

                const criteriaString = searchCriteria.join(', ');
                
                // 2. ê²€ìƒ‰ì–´ ìƒì„± (í•œêµ­ì–´ì™€ ì˜ì–´ ëª¨ë‘ ì‚¬ìš©)
                const koreanQuery = `${criteriaString} ${query} í•™ìƒ ëŒ€íšŒ ê³µëª¨ì „ ìµœì‹ `;
                const englishQuery = `${scope === 'international' ? (selectedCountry || continent) : 'korea'} ${query} student competition ${startDate ? startDate : 'now'} to ${endDate ? endDate : 'future'}`;

                // 3. System Prompt & User Query
                const finalSystemPrompt = `
                    ë‹¹ì‹ ì€ í•™ìƒë“¤ì„ ìœ„í•œ êµì™¸ ëŒ€íšŒ ë° ê²½ì§„ëŒ€íšŒ ì •ë³´ë¥¼ ì „ë¬¸ìœ¼ë¡œ ê²€ìƒ‰í•˜ê³  ìš”ì•½í•˜ëŠ” ìœ ìš©í•œ ì¡°ìˆ˜ì…ë‹ˆë‹¤.
                    ${systemInstructions}
                    ê²€ìƒ‰ ì¡°ê±´: ${criteriaString}.
                    ê° ëŒ€íšŒì— ëŒ€í•´ ë‹¤ìŒ 5ê°€ì§€ ì£¼ìš” ì •ë³´ì™€ ì›¹ì‚¬ì´íŠ¸ ì£¼ì†Œ(URL)ë¥¼ í¬í•¨í•˜ì—¬ **ë³´ê¸° í¸í•œ Markdown ëª©ë¡ í˜•íƒœ**ë¡œ 3~5ê°œì˜ ì£¼ìš” ì •ë³´ë§Œ ê°„ê²°í•˜ê²Œ ì œì‹œí•´ì•¼ í•©ë‹ˆë‹¤.
                    í•„ìˆ˜ ì •ë³´ í•­ëª©: 'ëŒ€íšŒëª…', 'ì£¼ìµœ/ì£¼ê´€', 'ì°¸ê°€ ëŒ€ìƒ', 'ì£¼ìš” ì¼ì • (ì ‘ìˆ˜ ë° ê°œìµœ ê¸°ê°„)', 'íŠ¹ì§•/ì£¼ì œ', **'ìƒì„¸ ë§í¬(URL)'**.
                    ì •ë³´ì˜ ì •í™•ì„±ì„ ìœ„í•´ ë°˜ë“œì‹œ Google Searchë¥¼ ì‚¬ìš©í•´ì•¼ í•©ë‹ˆë‹¤.
                `;
                
                const userQuery = `ê²€ìƒ‰ì–´ "${query}"ì™€ í•„í„°(${criteriaString})ì— í•´ë‹¹í•˜ëŠ” í˜„ì¬ ì§„í–‰ ì¤‘ì¸ êµì™¸ ëŒ€íšŒ ë° ê²½ì§„ëŒ€íšŒ ì •ë³´ë¥¼ ì°¾ì•„ Markdown í˜•ì‹ìœ¼ë¡œ ì •ë¦¬í•´ ì£¼ì„¸ìš”.`;

                const payload = {
                    contents: [{ parts: [{ text: userQuery }] }],
                    tools: [{ "google_search": { queries: [koreanQuery, englishQuery] } }], 
                    systemInstruction: { parts: [{ text: finalSystemPrompt }] },
                };

                const { text, sources } = await callGeminiApi(payload);
                displayResults(text, sources, query);
                
            } catch (e) {
                displayError(e.message);
            } finally {
                updateLoadingState(false);
            }
        }
        
        // ----------------------------------------------------
        // 5. ì´ˆê¸°í™” ë° ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ì„¤ì •
        // ----------------------------------------------------

        /**
         * ì• í”Œë¦¬ì¼€ì´ì…˜ ì´ˆê¸°í™” í•¨ìˆ˜
         */
        const initializeUI = () => {
            // 1. êµ­ë‚´/í•´ì™¸ ë²„íŠ¼ ë¦¬ìŠ¤ë„ˆ
            document.getElementById('btn-domestic').addEventListener('click', () => handleScopeChange('domestic'));
            document.getElementById('btn-international').addEventListener('click', () => handleScopeChange('international'));
            
            // 2. ê²€ìƒ‰ ë²„íŠ¼ ë¦¬ìŠ¤ë„ˆ
            searchButtonEl.addEventListener('click', handleSearch);

            // 3. ê´€ì‹¬ ë¶„ì•¼ ì…ë ¥ í•„ë“œ ì—”í„° í‚¤ ë¦¬ìŠ¤ë„ˆ
            const queryInputEl = document.getElementById('query-input');
            queryInputEl.addEventListener('keydown', (e) => {
                if (e.key === 'Enter' && !searchButtonEl.disabled) {
                    handleSearch();
                }
            });

            // 4. í•„í„° ë° ê²€ìƒ‰ì–´ ë³€ê²½ ì‹œ ê²€ìƒ‰ ë²„íŠ¼ ìƒíƒœ ì—…ë°ì´íŠ¸ ë¦¬ìŠ¤ë„ˆ
            queryInputEl.addEventListener('input', updateSearchButtonState);
            document.getElementById('start-date').addEventListener('input', updateSearchButtonState);
            document.getElementById('end-date').addEventListener('input', updateSearchButtonState);

            // ì´ˆê¸° ìƒíƒœ ì—…ë°ì´íŠ¸
            updateSearchButtonState();
        };

        window.onload = initializeUI;
    </script>
